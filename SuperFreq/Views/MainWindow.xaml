<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:SuperFreq.ViewModels;assembly=SuperFreq"
        Icon="resm:SuperFreq.Assets.judy_blue_face.ico"
        Title="SuperFreq"
        Height="500" Width="800">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <Grid RowDefinitions="30, 433*">
    <Menu Grid.Row="0">
      <MenuItem Header="File">
        <MenuItem Name="Menu_File_Open" Header="Open"/>
        <MenuItem Name="Menu_File_Save" Header="Save"/>
        <Separator/>
        <MenuItem Name="Menu_File_Exit" Header="Exit"/>
      </MenuItem>
    </Menu>
    <Grid Grid.Row="1" ColumnDefinitions="8*, 121*, 267*">
      <TreeView Name="TreeView_Archive" Grid.Column="0" Grid.ColumnSpan="2" Margin="5" BorderThickness="5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <TreeView.Styles>
          <Style Selector="TreeViewItem.directory">
            <Setter Property="FontSize" Value="16" />
          </Style>
          <Style Selector="TreeViewItem.file">
            <Setter Property="FontSize" Value="12" />
          </Style>
        </TreeView.Styles>
      </TreeView>
    </Grid>
  </Grid>
  <!--TextBlock Text="{Binding Greeting}" HorizontalAlignment="Center" VerticalAlignment="Center"/-->
</Window>